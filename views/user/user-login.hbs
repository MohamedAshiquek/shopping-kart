<div class="row">
    <div class="col-md-5 m-auto" >
        <div class="condainer mt-5 pl-5">
            <h2 class="text-center">Login</h2>
            <form class="/login" method="post">
           
                <div class="form-group">
                    <label>Email address</label><br>
                    <input type="email" class="form-condrol" name="Email" placeholder="Enter email" style="width: 100%;">

                </div>
                <div class="form-group">
                    <label>Password</label><br>
                    <input type="password" class="form-condrol" name="Password" placeholder="Enter Password" style="width: 100%;">
                </div>
                <a href="/signup">Create New Account</a>
                <button type="submit" class="btn btn-primary float-right">Login</button>
             {{#if loginErr}}
            
            <p class="error" style="color: red;">{{loginErr}}</p>
            {{/if}}

            </form>

        </div>
    </div>
</div>